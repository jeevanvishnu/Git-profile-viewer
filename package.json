{
  "name": "github-app",
  "type": "module",
  "private": true,
  "module": "src/index.ts",
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "cd backend && bun --watch src/server.ts",
    "dev:frontend": "cd frontend && bun dev",

    "build": "cd frontend && bun install && bun run build",

    "start": "cd backend && bun start"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}